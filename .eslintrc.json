{
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "func-names": [0],
    "vars-on-top": [0],
    "no-console": [0],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "max-len": [0],
    "strict": [2, "global"],
    "no-param-reassign": [2, {"props": false}],
    "lines-around-directive": [2, { "before": "never", "after": "always" }],
    "space-before-function-paren": [2, "never"],
    "no-plusplus": [0]
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb/legacy"
}
